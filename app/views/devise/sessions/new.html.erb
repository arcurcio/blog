<div class="page-header">
  <h1>Login</h1>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="clearfix">
      <%= f.label :remember_me %>
      <div class="input">
        <%= f.check_box :remember_me %>
      </div>
    </div>
  <% end %>

  <div class="input">
    <%= f.submit "Login", class: "btn primary" %> <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </div>
<% end %>

