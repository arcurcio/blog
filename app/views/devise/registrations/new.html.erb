<div class="page-header">
  <h1>Sign up</h1>
</div>

<% if resource.errors.any? %>
  <div class="alert-message block-message error">
    <a class="close" href="#">Ã—</a>
    <p><strong>Oh snap! You got an error!</strong><%= pluralize(resource.errors.count, "error") %> prohibited this <%= resource_name %> from being saved:</p>
    <ul>
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password_confirmation %>
    <div class="input">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="input">
    <%= f.submit "Sign up", class: "btn primary" %> or <%= link_to "Login", new_admin_session_path, class: "btn" %>
    <br />
    <br />
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </div>
<% end %>
