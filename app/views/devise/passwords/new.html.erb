<div class="page-header">
  <h1>Forgot your password?</h1>
</div>

<% if resource.errors.any? %>
  <div class="alert-message block-message error">
    <a class="close" href="#">Ã—</a>
    <p><strong>Oh snap! You got an error!</strong><%= pluralize(resource.errors.count, "error") %> prohibited this <%= resource_name %> from being saved:</p>
    <ul>
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="input">
    <%= f.submit "Send me reset password instructions", class: "btn primary" %> <%= link_to "Login", new_admin_session_path, class: "btn" %>
  </div>
<% end %>
